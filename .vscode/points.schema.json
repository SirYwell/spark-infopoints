{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for spark 'infopoint' files",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "thread": {
        "type": "string",
        "description": "The name of a thread"
      },
      "threads": {
        "type": "array",
        "items": {
          "type": "string",
          "description": "The name of a thread"
        }
      },
      "method": {
        "type": "string",
        "description": "The name of a method"
      },
      "methods": {
        "type": "array",
        "items": {
          "type": "string",
          "description": "The name of a method"
        }
      },
      "regex": {
        "type": "boolean",
        "description": "Whether to regex match the thread/method names"
      },
      "description": {
        "type": "string",
        "description": "A description of the thread/method"
      }
    },
    "additionalProperties": false,
    "required": [
      "description"
    ]
  }
}